<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewmodel.MapFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Active Ride"
            android:gravity="center"
            style="@style/fragmentTitles"/>

        <RelativeLayout
            android:id="@+id/relative_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/image_test"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/scooter"
                android:layout_centerInParent="true" />

            <ProgressBar
                android:id="@+id/progress"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_centerInParent="true"
                android:visibility="visible" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/active_scooter_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/subsubtitle"
                android:text="Name"/>
            <TextView
                android:id="@+id/active_scooter_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/subsubtitle"
                android:text="Time"/>
            <TextView
                android:id="@+id/active_scooter_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/subsubtitle"
                android:text="Price"/>
        </LinearLayout>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Pause Ride"
            style="@style/buttonLarge"
            android:layout_marginBottom="12dp"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            style="@style/buttonLarge"
            android:text="End Ride"
            />


    </LinearLayout>

</FrameLayout>